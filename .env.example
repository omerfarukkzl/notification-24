# ----------------------
# Backend (.NET API/Worker)
# ----------------------
ASPNETCORE_ENVIRONMENT=Development
DOTNET_ENVIRONMENT=Development

ConnectionStrings__SqlServer=Server=localhost,1433;Database=Notification24Db;User Id=sa;Password=YourStrong!Passw0rd;TrustServerCertificate=True;Encrypt=False
Database__ApplyMigrationsOnStartup=true

Firebase__ProjectId=replace-with-firebase-project-id
# Firebase Console > Project Settings > Service accounts > Generate new private key
# JSON dosyasini asagidaki path'e koy (dosya repo'ya commit edilmemeli).
Firebase__ServiceAccountJsonPath=./src/backend/Notification24.Api/firebase-service-account.json
# Alternative to ServiceAccountJsonPath:
# Firebase__ServiceAccountJson={...json...}

Seed__AdminUserName=admin
Seed__AdminEmail=admin@notification24.local
# Firebase Authentication'da olusturdugun admin kullanicinin UID degeri.
Seed__AdminFirebaseUid=replace-with-real-firebase-uid

RabbitMq__HostName=localhost
RabbitMq__Port=5672
RabbitMq__UserName=guest
RabbitMq__Password=guest
RabbitMq__VirtualHost=/

InternalApi__Key=local-internal-key
Api__BaseUrl=http://localhost:5050/
Api__InternalKey=local-internal-key

Cors__AllowedOrigins__0=http://localhost:4200
Cors__AllowedOrigins__1=https://localhost:4200

# ----------------------
# Frontend (Angular runtime)
# ----------------------
WEB_API_BASE_URL=http://localhost:5050
WEB_FIREBASE_API_KEY=replace-with-firebase-api-key
WEB_FIREBASE_AUTH_DOMAIN=replace-with-firebase-auth-domain
WEB_FIREBASE_PROJECT_ID=replace-with-firebase-project-id
WEB_FIREBASE_APP_ID=replace-with-firebase-app-id
