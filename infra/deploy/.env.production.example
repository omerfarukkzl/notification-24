# ----------------------
# Backend (.NET API / Worker)
# ----------------------
ASPNETCORE_ENVIRONMENT=Production
DOTNET_ENVIRONMENT=Production

ConnectionStrings__Postgres=Host=replace-with-render-postgres-host;Port=5432;Database=notification24;Username=replace-with-user;Password=replace-with-password;SSL Mode=Require;Trust Server Certificate=true
Database__ApplyMigrationsOnStartup=false

Firebase__ProjectId=replace-with-firebase-project-id
# Render ortaminda dosya mount yerine inline secret tercih edilir.
Firebase__ServiceAccountJson={...service-account-json...}

Seed__AdminUserName=admin
Seed__AdminEmail=admin@notification24.local
Seed__AdminFirebaseUid=replace-with-real-firebase-uid

RabbitMq__HostName=replace-with-cloudamqp-host
RabbitMq__Port=5672
RabbitMq__UserName=replace-with-rabbitmq-username
RabbitMq__Password=replace-with-rabbitmq-password
RabbitMq__VirtualHost=replace-with-rabbitmq-vhost

InternalApi__Key=replace-with-strong-internal-key
Api__BaseUrl=https://replace-with-your-api-domain/
Api__InternalKey=replace-with-strong-internal-key

Cors__AllowedOrigins__0=https://replace-with-your-vercel-domain.vercel.app

# ----------------------
# Frontend (Vercel runtime env)
# ----------------------
WEB_API_BASE_URL=https://replace-with-your-api-domain
WEB_FIREBASE_API_KEY=replace-with-firebase-api-key
WEB_FIREBASE_AUTH_DOMAIN=replace-with-firebase-auth-domain
WEB_FIREBASE_PROJECT_ID=replace-with-firebase-project-id
WEB_FIREBASE_APP_ID=replace-with-firebase-app-id
